<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/RV_Sections"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/RV_ImportanceTextView"
                    android:text="importance"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_toRightOf="@id/RV_Image"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_margin="4dp"
                    android:background="@android:color/darker_gray"></View>

            </LinearLayout>
            <ImageView
                android:id="@+id/RV_Image"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_below="@id/RV_Sections"
                android:src="@drawable/ic_launcher_round"/>
            <TextView
                android:id="@+id/RV_ContentTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="content"
                android:layout_toRightOf="@id/RV_Image"
                android:layout_below="@id/RV_Sections"/>
            <TextView
                android:id="@+id/RV_DateTimeTextView"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/RV_ContentTextView"
                android:text="timeanddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
